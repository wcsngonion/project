<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--设置一个黑色边框-->
    <stroke android:width="2px" android:color="#000000"/>
    <!--渐变-->
    <gradient
        android:angle="270"
        android:endColor="#c0c0c0"
        android:startColor="#fcd209"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
</shape>